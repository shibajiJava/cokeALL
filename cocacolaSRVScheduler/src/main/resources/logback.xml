<?xml version="1.0" encoding="UTF-8"?>
<configuration>  
<!-- local file -->
 <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">  
  <!-- encoders are assigned the type  
     ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->  
  <encoder>  
   <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>  
  </encoder>  
 </appender>  
 
	
	
	<appender name="FILE_daily" class="ch.qos.logback.core.rolling.RollingFileAppender">
			<File>/apps/logs/janrainForETL/logs/metricSchedular.log</File>
			<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<FileNamePattern>/apps/logs/janrainForETL/logs/metricSchedular_daily.%d{yyyy-MM-dd}.log</FileNamePattern>
			
			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>	
			</rollingPolicy>
			 
			<encoder>
			<Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n</Pattern>
			</encoder> 
	</appender>

	
	<appender name="janrainforETL_schedular_Task" class="ch.qos.logback.core.rolling.RollingFileAppender">
			<File>/apps/logs/janrainForETL/logs/janrainforETLschedularLog.log</File>
			<!-- <File>C:/cds/janrainForETL/logs/janrainforETLschedularLog.log</File> -->
			<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<FileNamePattern>/apps/logs/janrainForETL/logs/schedularLog.%d{yyyy-MM-dd}.log</FileNamePattern>
			
			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>	
			</rollingPolicy>
			 
			<encoder>
			<Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n</Pattern>
			</encoder> 
	</appender>
	
	
	
    
    <appender name="ASYNC_janrainforETL_schedular_Task" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="janrainforETL_schedular_Task"/>
    </appender>
    
    <logger name="janrainforETL_schedularTask" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_janrainforETL_schedular_Task"/>
    </logger>
	
	<logger name="com.ibm.ko.cds">
		<level value="info" />
	</logger>
	
	<logger name="com.mchange.v2">
	    <level value="info"/>
	</logger>
	
	<logger name="javax.xml.bind">
		<level value="info" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.jndi">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>

	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>

	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.aop">
		<level value="info" />
	</logger>

	<logger name="com.focus.rcl.crn.CrnFacade">
		<level value="fatal" />
	</logger>
	<logger name="com.focus.ftl.util.Util">
		<level value="error" />
	</logger>

	<logger name="org.opensaml">
		<level value="info" />
	</logger>

	<logger name="org.apache.xml.security">
		<level value="info" />
	</logger>

	<logger name="org.apache">
		<level value="info" />
	</logger>

	
	<logger name="com.focus">
		<level value="info" />
	</logger>

	<logger name="httpclient">
		<level value="info" />
	</logger> 
 
 
 	<root>
		<priority value="INFO" />
		<appender-ref ref="console"/>
		<appender-ref ref="ASYNC_FILE_daily"/>
	 </root>  
	 
</configuration>  